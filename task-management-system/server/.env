PORT=5000

# Database Configuration
# ---------------------
# Choose database type: Set USE_MEMORY_DB to true for in-memory database or false for real MongoDB
USE_MEMORY_DB=true

# MongoDB Connection URIs (only used when USE_MEMORY_DB=false)
# Local MongoDB connection 
MONGODB_URI=mongodb://localhost:27017/task_management_db

# MongoDB Atlas connection - create a free account at https://cloud.mongodb.com 
# MONGODB_URI=mongodb+srv://taskmanagement:taskmgmt123@cluster0.nw9od6m.mongodb.net/task_management_db?retryWrites=true&w=majority

# Authentication
# -------------
JWT_SECRET=task_management_secured_secret_key
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
BYPASS_AUTH=true

# Environment
# ----------
NODE_ENV=development

# File Uploads
# -----------
FILE_UPLOAD_PATH=./uploads
MAX_FILE_UPLOAD=5000000

# Production settings (uncomment for production)
# NODE_ENV=production
# USE_MEMORY_DB=false
# BYPASS_AUTH=false
# CLIENT_URL=https://yourtaskmanagement.app 